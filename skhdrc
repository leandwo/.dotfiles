# SKHD Keyboard Shortcuts

############
# YABAI WM #
############


##### LEFT HAND #####

# WINDOWS
# focus window
hyper - r : yabai -m window --focus west
hyper - s : yabai -m window --focus south
hyper - f : yabai -m window --focus north
hyper - t : yabai -m window --focus east
# warp managed window
ctrl + shift + alt - r : yabai -m window --warp west
ctrl + shift + alt - s : yabai -m window --warp south
ctrl + shift + alt - f : yabai -m window --warp north
ctrl + shift + alt - t : yabai -m window --warp east
# focus next / prev including floating windows
hyper - a : yabai -m window --focus first
hyper - g : yabai -m window --focus "$(yabai -m query --windows | jq -re "sort_by(.display, .frame.x, .frame.y, .id) | map(select(.visible == 1 and .subrole != \"AXUnknown\")) | reverse | nth(index(map(select(.focused == 1))) - 1).id")"
# toggle window split type (horizontal/vertical)
ctrl + shift + alt - v : yabai -m window --toggle split

# SPACES
# focus space 
hyper - q : yabai -m space --focus prev #|| yabai -m space --focus last
hyper - w : yabai -m space --focus next #|| yabai -m space --focus first
ctrl + shift + alt - q : yabai -m window --space prev; yabai -m space --focus prev
ctrl + shift + alt - w : yabai -m window --space next; yabai -m space --focus next
# create/delete spaces
hyper - z: 
  yabai -m space --create; \
  spacebar -m config spaces on
hyper - x: 
  current_space=$(yabai -m query --spaces --space | jq -r '.index'); \
  yabai -m space --destroy; \
  num_spaces=$(yabai -m query --spaces | jq length); \
  yabai -m space --focus $([ "$num_spaces" -lt "$current_space" ] && echo $num_spaces || echo $current_space)
ctrl + shift + alt - z: 
  yabai -m space --move prev; \
  spacebar -m config spaces on
ctrl + shift + alt - x: 
  yabai -m space --move next; \
  spacebar -m config spaces on

# DISPLAYS
# focus display
hyper - c : yabai -m display --focus prev
hyper - d : yabai -m display --focus next
ctrl + shift + alt - c : yabai -m window --display prev; yabai -m display --focus prev
ctrl + shift + alt - d : yabai -m window --display next; yabai -m display --focus next

# balance window sizes
ctrl + shift + alt - b : yabai -m space --balance

##### RIGHT HAND #####

# WINDOWS
# increase window size 
# hyper - n : yabai -m window --resize left:-80:0
# hyper - e : yabai -m window --resize bottom:0:80
# hyper - u : yabai -m window --resize bottom:0:-80
# hyper - i : yabai -m window --resize left:80:0
# layout presets
ctrl + shift + alt - n : yabai -m window --ratio abs:0.325
ctrl + shift + alt - e : yabai -m space --balance
ctrl + shift + alt - i : yabai -m window --ratio abs:0.675
# zoom in full screen
ctrl + shift + alt - m :  
  yabai -m window --toggle zoom-fullscreen; \
  yabai -m window --grid 1:1:0:0:1:1 
# zoom out
ctrl + shift + alt - o:  
  yabai -m window --grid 6:4:1:1:2:4

# toggle sticky
ctrl + alt + shift - y : yabai -m window --toggle sticky

# toggle float
ctrl + alt + shift - u : 
  yabai -m window --toggle float;\
  yabai -m window --grid 6:4:1:1:2:4

# ,.: move space
# ctrl + shift + alt - 0x2F : yabai -m space --move next
# ctrl + shift + alt - 0x2B : yabai -m space --move prev

# END
